{
  "productName": "STONE 매니저",
  "version": "0.1.0",
  "identifier": "com.stone.manager",
  "build": {
    "beforeBuildCommand": "npm run build",
    "beforeDevCommand": "npm run dev",
    "devUrl": "http://localhost:5173",
    "frontendDist": "../dist"
  },
  "app": {
    "windows": [
      {
        "label": "main",
        "title": "STONE 매니저",
        "titleBarStyle": "Overlay",
        "hiddenTitle": true,
        "width": 1100,
        "height": 720,
        "minWidth": 320,
        "minHeight": 480,
        "resizable": true
      }
    ],
    "security": {
      "csp": null,
      "capabilities": ["main"]
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/icon.png",
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png"
    ],
    "macOS": {
    }
  }
}
